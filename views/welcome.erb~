<center><b>Most Recent Tweets</b></center>
<% @tweets.each do |tweet| %>
	<% @user_id= tweet.user_id %>
 	<% user = User.find_by(id: @user_id)%>
 	<% user_name = user.user_name%>
	<p><center><a href="/user_page?user_id=<%= @user_id %>"> <%= user_name %> </a>
	<% diff = (Time.now - tweet.created_at).to_i %>
 		<% if diff < 60 %>	
			<%= diff %>s </center></p>
		<% elsif diff >= 60 && diff < 3600 %>
			<%= (diff / 60).to_i %>m </center></p>
		<% elsif diff >= 3600 && diff < 86400 %>
			<%= (diff / 3600).to_i %>h </center></p>
		<% else  %>
			<%= (diff / 86400).to_i %>d </center></p>
		<% end %>
	<center><%= tweet.text%></center>
	<br/>
<% end %>
